@model IEnumerable<StudentMVC.Models.Student>

<h2>Danh sách sinh viên</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Class</th>
            <th>Photo</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Class</td>
                <td><img src="@student.Photo" alt="Student Photo" width="100" /></td>
                <td>
                    <a asp-action="UpdatePhoto" asp-route-id="@student.Id" class="btn btn-primary">Cập nhật ảnh</a>
                </td>
            </tr>
        }
    </tbody>
</table>
